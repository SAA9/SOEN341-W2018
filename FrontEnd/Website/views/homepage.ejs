<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="/stylesheets/footer.css">
	<link rel="stylesheet" type="text/css" href="/stylesheets/global.css">
    
    
</head>

<body>
    
    <!-- Loading views/partials/header.ejs -->
    <% include partials/header %>
    
    
    <!-- =================================== BODY CONTENT: QUESTION LIST =================================== -->
    
    <div class="body-container">
        <div class="content-container center-div">
            <div class="card text-center">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs questions-tab">
                        <li class="nav-item">
                            <button class="nav-link active tab-link" onclick="openTab(event, 'Newest')" >Newest</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link tab-link" onclick="openTab(event, 'Popular')">Popular</button>
                        </li>
                        <!--
                        <li class="nav-item">
                            <button class="nav-link tab-link" onclick="openTab(event, 'Featured')">Featured</button>
                        </li>
                    -->
                    </ul>
                </div>
                
                <!-- ////////////////////////////// Newest ////////////////////////////// -->
                
                <div class="questions-all">
                    <div class="card-body" id="Newest">
                        <h5 class="card-title">Newest Questions</h5>
                        <% for (var newest_q_list = 0; newest_q_list<homepage.newest.newest_question_list.length; newest_q_list++) { %>
                            <% var questions = homepage.newest.newest_question_list %>
                            <div class="row summary">
                                <div class="col-xl summary-vote"><span class="badge badge-primary badge-pill"> <%= questions[newest_q_list].numOfVotes %> </span><br>votes</div>
                                <div class="col-xl summary-answer"><span class="badge badge-primary badge-pill"><%= questions[newest_q_list].numOfAnswers %></span><br> answer</div>
                                <div class="col-xl summary-view"><span class="badge badge-primary badge-pill"> <%= questions[newest_q_list].numOfViews %> </span><br> view </div>
                                
                                <div class="col-xl-9 summary=question">
                                    <h6 class="summary-question-hyperlink">
                                        <a href=<%= "/question_forum/" + String(questions[newest_q_list].q_id) %>> <%= questions[newest_q_list].question %> </a>
                                    </h6>
                                    <div class="summary-question-tags">
                                        <a class="btn btn-primary" href="#" role="button">Tag</a>
                                        <a class="btn btn-primary" href="#" role="button">Tag</a>
                                        <a class="btn btn-primary" href="#" role="button">Tag</a>
                                    </div>
                                    <div class="summary-question-user">
                                        <a href="#"> <%= questions[newest_q_list].userName %> </a>
                                        <div> <%= questions[newest_q_list].date_ans %> </div>
                                        <div> <%= questions[newest_q_list].time_ans %> </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                        </div>
                        
                        <!-- ////////////////////////////// Popular ////////////////////////////// -->
                        
                        <div class="card-body" id="Popular">
                            <h5 class="card-title">Popular Questions</h5>
                            <% for (var popular_q_list = 0; popular_q_list<homepage.popular.popular_question_list.length; popular_q_list++) { %>
                                <% var questions = homepage.popular.popular_question_list %>
                                <div class="row summary">
                                    <div class="col-xl summary-vote"><span class="badge badge-primary badge-pill"> <%= questions[popular_q_list].numOfVotes %> </span><br>votes</div>
                                    <div class="col-xl summary-answer"><span class="badge badge-primary badge-pill"><%= questions[popular_q_list].numOfAnswers %></span><br> answer</div>
                                    <div class="col-xl summary-view"><span class="badge badge-primary badge-pill"> <%= questions[popular_q_list].numOfViews %> </span><br> view </div>
                                    
                                    <div class="col-xl-9 summary=question">
                                        <h6 class="summary-question-hyperlink">
                                            <a href="#"> <%= questions[popular_q_list].question %> </a>
                                        </h6>
                                        <div class="summary-question-tags">
                                            <a class="btn btn-primary" href="#" role="button">Tag</a>
                                            <a class="btn btn-primary" href="#" role="button">Tag</a>
                                            <a class="btn btn-primary" href="#" role="button">Tag</a>
                                        </div>
                                        <div class="summary-question-user">
                                            <a href="#"> <%= questions[popular_q_list].userName %> </a>
                                            <div> <%= questions[popular_q_list].date_ans %> </div>
                                            <div> <%= questions[popular_q_list].time_ans %> </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                            
                            
                            
                            <!-- ////////////////////////////// Featured ////////////////////////////// -->
                            
                            <!--
                            <div class="card-body" id="Featured">
                                <h5 class="card-title">Featured Questions</h5>
                                
                            </div>
                        -->
                            
                            
                        </div>
                    </div>
                </div>
            </div>
            
            
        </div>
        
        <% include partials/footer %>
        
    </body>
    
    <script src="script.js"></script>
    
    
    </html>