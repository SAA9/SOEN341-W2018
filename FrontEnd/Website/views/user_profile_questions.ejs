<!DOCTYPE html>
<html>
<head>
	<title>User Profile</title>
	<link rel="stylesheet" type="text/css" href="global.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body> 
	<% include partials/header %>
	
	<div class="body-container">
		<div class="content-container center-div">
			<div class="alignment-container">
				
				<div id="user-area-div" class="make-flex flex-row flex-left">
					<div class="user-div" id="user-profile-div">
						<% var userProfile = userprofile.user_profile_info %>
						
						<% if(userProfile.user_gender == "M") { %>
							<div class="image center-div" id="male_profile"></div>
							<% } else if(userProfile.user_gender == "F") { %>
								<div class="image center-div" id="female_profile"></div>
								<% } else if(userProfile.user_gender == "O") { %>
									<div class="image center-div" id="other_profile"></div>
									<% } %>
									
									<div class="self-top" id="user-profile-metrics">
										
										<p class="align-center" id="username">
											<%= userProfile.userName %>
										</p>
										<p class="align-center" id="fullname">
											<%= userProfile.user_firstName %> <%= userProfile.user_lastName %>
										</p>
										<p class="align-center" id="date-of-birth">
											<%= userProfile.user_birthDate %>
										</p>
										<p class="align-center" id="country">
											<%= userProfile.user_country %>
										</p>
										<p class="align-center" id="questions-asked">
											Asked <%= userprofile.user_activity.numberOfQuestions %> Question(s)
										</p>
										<p class="align-center" id="questions-answered">
											Answered <%= userprofile.user_activity.numberOfAnswers %> Question(s)
										</p>
										
										<% if (typeof logged !== "undefined" && logged == true && user_id === userProfile.userID) { %>
											<!-- Button trigger modal -->
											<button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#deleteAccount">
												Delete my account
											</button>
											
											<!-- Modal -->
											<div class="modal fade" id="deleteAccount" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
												<div class="modal-dialog" role="document">
													<div class="modal-content">
														<div class="modal-header">
															<h5 class="modal-title" id="exampleModalLabel">Are you sure you want your account permanently? </h5>
															<button type="button" class="close" data-dismiss="modal" aria-label="Close">
																<span aria-hidden="true">&times;</span>
															</button>
														</div>
														<div class="modal-body">
															This is delete all your questions and answers.
														</div>
														<div class="modal-footer">
															<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
															<form method="get" action= <%= "/user_profile/delete_user/" + String(userProfile.userID) %>>
																<button type="submit" class="btn btn-danger">Delete</button>
															</form>       
														</div>
													</div>
												</div>
											</div>
											
											<% } %>
											
										</div>
										
										
									</div>
									
									<div class="user-div" id="user-stats-div">
										<div class="center-div" id="view-title">
										
											<div class="card-header">
												<ul class="nav nav-tabs card-header-tabs questions-tab">
													<form>
														<li class="nav-item">
															<a href="?tab=questions" class="nav-link active tab-link"> Questions </a>
														</li>
													</form>
													<form>
														<li class="nav-item">
															<a href="?tab=answers" class="nav-link active tab-link"> Answers </a>
														</li>
													</form>
												</ul>
											</div>
										</div>
										<div class="make-flex flex-vert" id="view-results">
											<div class="tab-content">								
												<% for (var user_q_list = 0; user_q_list<userprofile.user_questions.user_question_list.length; user_q_list++) { %>
													<% var questions = userprofile.user_questions.user_question_list %>
													
													<div class="make-flex flex-vert view-result">
														
														<p class="view-result-p">
															<blockquote><a href="/question_forum/<%= questions[user_q_list].questionID %>"> <%= questions[user_q_list].questionTitle %> </a></blockquote>
															<%= questions[user_q_list].questionBody %>
														</p>
														
														<p class="self-right date-result-p">
															<%= questions[user_q_list].date_ans %> 
															
														</p>
														
														<% if (typeof logged !== "undefined" && logged == true && user_id === userProfile.userID) { %>
															<!-- Button trigger modal -->
															<button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#deleteQuestion">
																Delete
															</button>
															
															<!-- Modal -->
															<div class="modal fade" id="deleteQuestion" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
																<div class="modal-dialog" role="document">
																	<div class="modal-content">
																		<div class="modal-header">
																			<h5 class="modal-title" id="exampleModalLabel">Are you sure you want to delete this question?</h5>
																			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
																				<span aria-hidden="true">&times;</span>
																			</button>
																		</div>
																		<div class="modal-body">
																			<blockquote><a href="/question_forum/<%= questions[user_q_list].questionID %>"> <%= questions[user_q_list].questionTitle %> </a></blockquote>
																			<%= questions[user_q_list].questionBody %>
																		</div>
																		<div class="modal-footer">
																			<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
																			<form method="get" action= <%= "/user_profile/delete_question/" + String(questions[user_q_list].questionID) %>>
																				<button type="submit" class="btn btn-danger">Delete</button>
																			</form> 
																		</div>
																	</div>
																</div>
															</div>
															
															<% } %>
														</div>
														
														<% } %>													
													</div>	
												</div>
											</div>
										</div>
									</div>
								</div>
								
								<% include partials/footer %>
							</body>
							</html>
							
							